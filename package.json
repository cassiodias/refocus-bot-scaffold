{
  "name": "Bot-Development-Kit",
  "version": "0.0.2",
  "description": "Bot scaffold for refocus bot development",
  "scripts": {
    "build-ui": "webpack --config webpack.config.js",
    "start-ui": "webpack-dev-server --open",
    "start": "npm run build-ui && node bot.js && node /lib/botCompiler"
  },
  "dependencies": {
    "express": "4.10.2",
    "jsforce": "^1.7.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "socket.io": "1.2.0"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.4",
    "html-webpack-plugin": "^2.28.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "zip-webpack-plugin": "2.0.0"
  },
  "metadata": {
    "actions": [
      {
        "name": "actionName",
        "parameters": [
          {
            "name": "parameterName",
            "type": "String"
          }
        ]
      }
    ],
    "data": [
      {
        "name": "dataName",
        "type": "String"
      }
    ],
    "settings": [
      {
        "key": "dataName",
        "helpText": "Describe the information needed in this setting"
      }
    ]
  }
}
